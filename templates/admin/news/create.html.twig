{% extends 'base.html.twig' %}

{% block title %}Add New News{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/admin_news.css') }}">
    <style>
        .back-button {
            background-color: #6c757d;
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 4px;
            margin-right: 10px;
            display: inline-block;
        }

        .back-button:hover {
            background-color: #5a6268;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="form-title">Create News</h1>

        <div class="form-card">
            {{ form_start(form, {'attr': {'class': 'custom-form'}}) }}
            <div class="form-row">
                <div class="form-group">
                    {{ form_label(form.title, 'Title', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-input', 'placeholder': 'Enter news title'}}) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.createdAt, 'Created At', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.createdAt, {'attr': {'class': 'form-input'}}) }}
                    {{ form_errors(form.createdAt) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.shortDescription, 'Short Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.shortDescription, {'attr': {'class': 'form-input', 'placeholder': 'Enter a brief description'}}) }}
                {{ form_errors(form.shortDescription) }}
            </div>
            <div class="form-group">
                {{ form_label(form.content, 'Content', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-input', 'rows': 6, 'placeholder': 'Enter detailed content'}}) }}
                {{ form_errors(form.content) }}
            </div>
            <div class="form-group">
                {{ form_label(form.picture, 'Picture', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.picture, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.picture) }}
            </div>
            <div class="form-group">
                {{ form_label(form.categories, 'Categories', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.categories, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(form.categories) }}
            </div>
            <div class="form-actions">
                <a href="{{ path('admin_news_index') }}" class="form-button back-button">Back to News Index</a>
                <button type="submit" class="form-button">Save</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}